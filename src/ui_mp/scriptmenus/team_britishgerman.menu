		execKey "5" { play "mouse_click"; scriptMenuResponse "streamer" ; close team_britishgerman; }
		execKey "6" { play "mouse_click"; scriptMenuResponse "viewmap"; close ingame;}		

		execKeyInt 32 { play "mouse_click"; close team_britishgerman; open main; } // space
		execKeyInt 105 { play "mouse_click"; scriptMenuResponse "serverinfo"; close team_britishgerman; } // i




