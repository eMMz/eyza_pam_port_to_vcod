		DRAW_BARS


		// Header: Teams
		ITEM_TEXT_HEADING("@MPMENU_TEAM")


		// Bottom: 1. British
		ITEM_BUTTON_ONCVAR		(ORIGIN_CHOICE1, "@MPMENU_1_BRITISH", "ui_allow_joinallies", showCvar{"1"}, ; show "allies_info", scriptMenuResponse "allies"; close team_britishgerman;)
		ITEM_BUTTON_ONCVAR_DISABLED	(ORIGIN_CHOICE1, "@MPMENU_1_BRITISH", "ui_allow_joinallies", showCvar{"2"}, ;)

		// Bottom: 2. German
		ITEM_BUTTON_ONCVAR		(ORIGIN_CHOICE2, "@MPMENU_2_GERMAN", "ui_allow_joinaxis", showCvar{"1"}, ; show "axis_info", scriptMenuResponse "axis"; close team_britishgerman;)
		ITEM_BUTTON_ONCVAR_DISABLED	(ORIGIN_CHOICE2, "@MPMENU_2_GERMAN", "ui_allow_joinaxis", showCvar{"2"}, ;)

        // Bottom: 3. Auto-Assign
		ITEM_BUTTON_ONCVAR		(ORIGIN_CHOICE3, "@MPMENU_3_AUTOASSIGN", "ui_allow_joinauto", showCvar{"1"}, ; show "autoassign_info", scriptMenuResponse "autoassign"; close team_britishgerman;)
		ITEM_BUTTON_ONCVAR_DISABLED	(ORIGIN_CHOICE3, "@MPMENU_3_AUTOASSIGN", "ui_allow_joinauto", showCvar{"2"}, ;)

		// Bottom: 4. Spectate
		ITEM_BUTTON			(ORIGIN_CHOICE4, "@MPMENU_4_SPECTATE", ;, scriptMenuResponse "spectator"; close team_britishgerman;)

		// Bottom: 5. Streamer
		ITEM_BUTTON_ONCVAR		(ORIGIN_CHOICE5, "5. Streamer", "ui_allow_joinstreamer", showCvar{"1"}, ; , scriptMenuResponse "streamer"; close team_britishgerman;)
		
		// Viewmap: 6. View map
		ITEM_BUTTON (ORIGIN_CHOICE6, "6. View Map",;, scriptMenuResponse "viewmap"; close ingame;)



		// Close
		ITEM_BAR_BOTTOM_BUTTON("^9[ESC]^7 Close",	40, 70, close team_britishgerman;)
		// Main menu
		ITEM_BAR_BOTTOM_BUTTON("^9[SPACE]^7 Main Menu",	135, 120, close team_britishgerman; open main;)
		// Server info
		ITEM_BAR_BOTTOM_BUTTON("^9[I]^7 Server Info",	280, 80, scriptMenuResponse "serverinfo"; close team_britishgerman;)
	}

	// Key choices has to be in different menu if we are using submenus
	// This keys is opened as last and will be in focus - so keys from this submenu will be accepted
	menuDef
	{
		name			"team_britishgerman_keys"
		rect			0 0 1 1
		focuscolor		1 1 1 1
		style			WINDOW_STYLE_EMPTY

		execKey "1" { play "mouse_click"; scriptMenuResponse "allies" ; close team_britishgerman; }
		execKey "2" { play "mouse_click"; scriptMenuResponse "axis" ; close team_britishgerman; }
